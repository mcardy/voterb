<div class="jumbotron center">
  <h2>Voting on <%= @poll.title %> </h2>
</div>

<% if (params["error"] == "1") %>
  <div class="alert alert-danger">You have already voted on this poll!</div>
<% end %>

<%= form_for @poll, :url => {:action => 'submit'} do |f| %>
  <div class="form-group">
    <legend>Options</legend>
    <% @poll.poll.each do |key, value| %>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="option" id="optionsRadios<%= key %>" value="<%= key %>">
          <%= value[0] %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.submit "Cast Vote", :class => "btn btn-success btn-block" %>
    </div>
    <div class="col-md-6">
      <%= link_to "Back to Poll", @poll, :class => "btn btn-primary btn-block" %>
    </div>
  </div>

<% end %>
