<div class="jumbotron center">
  <h2><%= @poll.title %></h2>
</div>

<div class="results col-md-10 col-md-offset-1">
  <% @poll.poll.each do |key, value| %>
    <div class="result">
      <div class="row">
        <div class="col-md-10">
          <h4><strong><%= value[0] %></strong></h4>
        </div>
        <div class="col-md-2 center">
          <h4><strong>Votes: <%= value[1] %></strong></h4>
        </div>
      </div>
      <% percentage = Float(value[1]) / Float(@total) * 100 %>
      <div class="row">
        <div class="col-md-10">
          <div class="progress" style="height: 20px">
            <div class="progress-bar progress-bar-striped active progress-bar-success" style="width: <%= percentage %>%"></div>
          </div>
        </div>
        <div class="col-md-2 center">
          <%= percentage.round %>%
        </div>
      </div>
    </div>
  <% end %>
  <br>
</div>

<div class="row">
  <div class="col-md-3">
    <%= link_to 'Vote', vote_poll_path, :class => "btn btn-primary btn-block" %>
  </div>
  <div class="col-md-3">
    <%= link_to 'Edit', edit_poll_path, :class => "btn btn-info btn-block" %>
  </div>
  <div class="col-md-3">
    <%= link_to "Delete", @poll, method: :delete, data: { confirm: "Are you sure you want to delete this poll?" }, :class => "btn btn-danger btn-block" %>
  </div>
  <div class="col-md-3">
    <%= link_to 'Back', polls_path, :class => "btn btn-primary btn-block" %>
  </div>
</div>
